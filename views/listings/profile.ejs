<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
    }
    .profile-header {
      border-bottom: 1px solid #ddd;
      margin-bottom: 20px;
      padding-bottom: 10px;
    }
    .badge {
      padding: 4px 8px;
      background: #333;
      color: white;
      font-size: 12px;
      border-radius: 4px;
      margin-left: 8px;
    }
    .job-card {
      border: 1px solid #ccc;
      padding: 15px;
      margin-bottom: 12px;
      border-radius: 6px;
    }
    .job-actions a {
      margin-right: 10px;
      text-decoration: none;
      color: blue;
    }
    .empty {
      color: #777;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <!-- ================= PROFILE HEADER ================= -->
  <div class="profile-header">
    <h1>
      <%= user.username %>
      <span class="badge"><%= user.role %></span>
    </h1>
    <p>Member since: <%= user.createdAt.toDateString() %></p>
  </div>

  <!-- ================= BUILDER VIEW ================= -->
  <% if (user.role === "BUILDER") { %>
    <h2>Your Job Listings</h2>

    <% if (jobs.length === 0) { %>
      <p class="empty">You haven’t posted any jobs yet.</p>
    <% } %>

    <% jobs.forEach(job => { %>
      <div class="job-card">
        <h3><%= job.title %></h3>
        <p>
          <strong>City:</strong> <%= job.city %> |
          <strong>Work:</strong> <%= job.workType %>
        </p>
        <p>
          <strong>Status:</strong>
          <%= job.isActive ? "Active" : "Closed" %>
        </p>
        <p>
          <strong>Applicants:</strong>
          <%= job.applicants ? job.applicants.length : 0 %>
        </p>

        <div class="job-actions">
          <a href="/listings/<%= job._id %>">View Job</a>
          <a href="/listings/<%= job._id %>/applicants">View Applicants</a>
        </div>
      </div>
    <% }) %>
  <% } %>

  <!-- ================= WORKER VIEW ================= -->
  <% if (user.role === "WORKER") { %>
    <h2>Jobs You Applied To</h2>

    <% if (jobs.length === 0) { %>
      <p class="empty">You haven’t applied to any jobs yet.</p>
    <% } %>


    <% jobs.forEach(job => { 
         const application = job.applications.find(
           a => a.applicant._id.equals(user._id)
         );
    %>
      <%console.log("Application found:", job)%>
      <div class="job-card">
        <h3><%= job.title %></h3>
        <p>
          <strong>City:</strong> <%= job.city %> |
          <strong>Work:</strong> <%= job.workType %>
        </p>
        <p>
          <strong>Status:</strong>
          <%= application ? application.status : "unknown" %>
        </p>

        <div class="job-actions">
          <a href="/listings/<%= job._id %>">View Job</a>
        </div>
      </div>
    <% }) %>
  <% } %>

</body>
</html>
